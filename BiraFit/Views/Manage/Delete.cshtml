@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm("Delete", "Account", new {id = User.Identity.GetUserId()}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    <div class="container" id="boxform">
        <div id="popUpBox" class="col-md-6 col-md-offset-3 modal-content">
            <div class="panel panel-info" id="innerbox">
                <div class="panel-heading" id="boxHead">
                    <button type="button" class="close" id="closeBtn" data-dismiss="modal" aria-hidden="true">×</button>
                    <div class="panel-title">
                        <h4>Account löschen</h4>
                        <h5>Sind Sie sicher?</h5>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" id="delButton" value="Ja, Account löschen" class="btn btn-default" />
                            <a id="normalButton" class="btn btn-primary" href="/Manage/Index">Zurück</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



}