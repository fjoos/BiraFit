@model BiraFit.Models.IndexViewModel
@using Microsoft.AspNet.Identity.Owin;

@{
    var user = Request.GetOwinContext().GetUserManager<ApplicationUserManager>().FindByNameAsync(User.Identity.Name).Result;
    var image = "~/Resources/standardprofilbild.jpg";
    if (user.ProfilBild != null)
    {
        image = "~/Resources/AccountPicture/" + user.ProfilBild;
    }
}

<body id="profileBack">
    <div class="row">
    <div class="container">
        <div id="mybox" class="col-md-6 col-md-offset-3 modal-content">
            <div class="panel panel-info" id="innerbox">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h4>Mein Account</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-3 col-lg-3" align="center">
                                <div class="row">
                                    <img class="img-circle" id="profileImg" src="@Url.Content(image)" />
                                </div>
                                <div class="row">
                                    <a data-toggle="modal" href="#profileChangePopUp" id="link">Profilbild ändern</a>
                                </div>
                            </div>
                            <div class="col-md-9 col-lg-9">
                                    <ul class="list-group">
                                        <li class="list-group-item">Vorname: @user.Vorname</li>
                                        <li class="list-group-item">Nachname: @user.Name</li>
                                        <li class="list-group-item">Email: <a href="mailto:@user.Email" id="link">@user.Email</a></li>
                                        <li class="list-group-item">Kennwort: @Html.ActionLink("Kennwort ändern", "ChangePassword", "Manage", routeValues: null, htmlAttributes: new { id = "link" })</li>
                                    </ul>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="/Manage/Edit" class="btn btn-primary" id="normalButton">Profil bearbeiten</a>
                    <a data-toggle="modal" href="#deletePopUp" class="btn btn-primary" id="delButton">Profil löschen</a>
                </div>

            </div>
        </div>
    </div>

    <div id="profileChangePopUp" class="modal fade">
        @Html.Partial("UploadFile");
    </div>

    <div id="deletePopUp" class="modal fade">
        @Html.Partial("Delete");
    </div>
        </div>

</body>