@model BiraFit.Models.ShowViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="profileBack">
        <div class="row">
            <section id="boxForm">
                <div class="container" id="accountBox">
                    <div class="col-md-8 col-md-offset-2 modal-content" id="mybox">
                        <div class="panel panel-info" id="innerbox">
                            <div class="panel-heading" id="boxHead">
                                <div class="panel-title">
                                    <h4>Trainer: @Model.Vorname @Model.Name</h4>
                                </div>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-4 col-md-offset-1" align="center">
                                                @if (Model.Picture_ID != null)
                                                {
                                                    <img class="img-circle img-responsive" id="detailProfileImg" src="@Url.Content("~/Resources/AccountPicture/" + Model.Picture_ID)" />
                                                }
                                                else
                                                {
                                                    <img class="img-circle" id="profileImg" src="~/Resources/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg" />
                                                }
                                            </div>
                                            <div class="col-md-5">
                                                <ul class="list-group" id="myList">
                                                    <li class="list-group-item" id="myListObj">@Model.Vorname</li>
                                                    <li class="list-group-item" id="myListObj">@Model.Name</li>
                                                    <li class="list-group-item" id="myListObj">@Model.Adresse</li>
                                                    <li class="list-group-item" id="myListObj"><a href="mailto:" id="link">@Model.Mail</a></li>
                                                    <li class="list-group-item" id="myListObj">
                                                        <p>Bewertung:</p> 
                                                       
                                                            @Model.Bewertung
                                                        
                                                        <li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            Trainer Bewerten: button bibiba
                                            @using(Html.BeginForm("RateTrainer", "Manage")){ 
                                            
                                                <div class="input-group">
                                                    <input type="text" hidden value="@Model.User_Id" name="id" id="id" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="rating">Bewerten</label>
                                                    <input id="rating" type="number" placeholder="Bewertung 1-5" name="rating" />
                                                </div>
                                                <button type="submit" id="loginButton" class="btn btn-block">Bewertung abgeben</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            <div class="panel-footer" id="footerBox">
                                <h4>Zu mir</h4>
                                <p>
                                @Model.Beschreibung
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
</body>


