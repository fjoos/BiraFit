@model BiraFit.Models.EditViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var image = "~/Resources/AccountPicture/" + Model.ProfilBild;
}

@using (Html.BeginForm("Edit", "Manage"))
{

    <div>
        <div class="container" id="boxForm">
            <div id="mybox" class="col-md-6 col-md-offset-3  modal-content">
                <div class="panel panel-info" id="innerbox">
                    <div class="panel-heading" id="boxHead">
                        <h3 class="panel-title">Account bearbeiten</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3" align="center"> 
                                <a href="/Manage/UploadFile">
                                    @if (Model.ProfilBild != null)
                                    {
                                        <img class="img-circle" id="profileImg" src="@Url.Content(image)" />
                                    }
                                    else
                                    {
                                        <img class="img-circle" id="profileImg" src="~/Resources/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg" />
                                    }
                                 </a>
                              </div>
                            <div class="col-md-9 col-lg-9">

                                <table class="table table-user-information">
                                    <tbody>
                                        <tr class="form-group">
                                            <td>Vorname: </td>
                                            <td>@Html.TextBoxFor(model => model.Vorname, new { @class = "form-control", @placeholder = "Vorname" })</td>
                                        </tr>
                                        <tr class="form-group">
                                            <td>Nachname: </td>
                                            <td>@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Nachname" })</td>
                                        </tr>
                                        <tr class="form-group">
                                            <td>Email: </td>
                                            <td>@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })</td>
                                        </tr>
                                        <tr class="form-group">
                                            <td>Strasse: </td>
                                            <td>@Html.TextBoxFor(model => model.Adresse, new { @class = "form-control", @placeholder = "Strasse" })</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" id="footerBox">
                        <input type="submit" class="btn btn-primary" id="loginButton" value="Speichern" />
                        <a href="/Manage/Index">Zurück</a> 
                    </div>

                </div>
            </div>
        </div>
    </div>

}
