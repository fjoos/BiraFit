@model BiraFit.Models.EditViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Manage"))
{


    <div class="form-group">
        <label for="oldpw">Vorname</label>
        @Html.EditorFor(model => model.Vorname)
    </div>


    <div class="form-group">
        <label for="oldpw">Name</label>
        @Html.EditorFor(model => model.Name)
    </div>


    <div class="form-group">
        <label for="oldpw">Email</label>
        @Html.EditorFor(model => model.Email)
    </div>

    <div class="form-group">
        <label for="oldpw">Strasse</label>
        @Html.EditorFor(model => model.Adresse)
    </div>

    <div class="form-group">
        <label for="oldpw">ProfilBild</label>
        @Html.EditorFor(model => model.ProfilBild)
    </div>

    <input type="submit" value="Save" />
}
