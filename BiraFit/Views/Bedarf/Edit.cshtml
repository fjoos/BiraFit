@model BiraFit.Models.Bedarf
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="mainBack">
@using (Html.BeginForm("Edit", "Bedarf"))
{
    <div class="container" id="boxForm">
        <div id="mybox" class="mainbox col-md-6 col-md-offset-3 modal-content">
            <div class="panel panel-info" id="innerbox">
                <div class="panel-heading" id="boxHead">
                    <div class="panel-title">
                        <h4>Bedarf bearbeiten</h4>
                    </div>
                </div>
                <div class="modal-body" id="boxbody">
                    <form role="form">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="titel">Titel</label>
                                @Html.TextBoxFor(m => m.Titel, new {@class = "form-control", @id = "titel", @placeholder = "Titel"})
                                @Html.ValidationMessageFor(m => m.Titel, "", new {@class = "text-danger"})
                            </div>

                            <div class="form-group">
                                <label for="textarea">Beschreibung</label>
                                @Html.TextAreaFor(m => m.Beschreibung, new {@class = "form-control", @id = "textarea", @placeholder = "Beschreibung"})
                                @Html.ValidationMessageFor(m => m.Beschreibung, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="preis">Meine Preisvorstellung</label>
                                @Html.TextBoxFor(m => m.Preis, new {@class = "form-control", @id = "preis", @type = "number", @placeholder = "Preis pro Woche"})
                                @Html.ValidationMessageFor(m => m.Preis, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ort">In der Umgebung von</label>
                                @Html.TextBoxFor(m => m.Ort, new {@class = "form-control", @id = "ort", @placeholder = "Ort"})
                                @Html.ValidationMessageFor(m => m.Ort, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-6 col-md-off-3">
                            <div class="form-group">
                                <button type="submit" id="loginButton" class="btn btn-block">Bedarf speichern</button>
                                <a>delete</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
</body>