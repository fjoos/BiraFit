@model List<BiraFit.Models.Bedarf>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">


<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2 class="page-header">Bedürfnisse</h2>
            <section class="comment-list">

                @foreach (var item in @Model)
                {
                    <article class="row">
                        <div class="col-md-2 col-sm-2 hidden-xs">
                            <figure class="thumbnail">
                                <img class="img-responsive" src="http://www.keita-gaming.com/assets/profile/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg" />
                                <figcaption class="text-center">Benutzername</figcaption>
                            </figure>
                        </div>
                        <div class="col-md-10 col-sm-10">
                            <div class="panel panel-default arrow left">
                                <div class="panel-body">
                                    <header class="text-left">
                                        <div class="comment-user"><i class="fa fa-user"></i>Titel @item.Titel</div>
                                        <time class="comment-date" datetime="16-12-2014 01:05">
                                        <i class="fa fa-clock-o"></i>
                                        @item.Datum.Day.@item.Datum.Month.@item.Datum.Year
                                        </time>
                                    </header>
                                    <div class="comment-post">
                                        <p>
                                            @item.Beschreibung
                                        </p>
                                    </div>
                                    <p class="text-left">Umgebung: @item.Ort</p>
                                    <p class="text-left">Preisvorstellung: @item.Preis</p>
                                    <div class="input-group">
                                        <input type="number" id="angebot" class="form-control input-sm chat-input" placeholder="Mein Angebot" />
                                        <input type="text" id="angebotsBeschreibung" class="form-control input-sm chat-input" placeholder="Beschriebung..." />
                                        <span class="input-group-btn" onclick="">
                                            <a href="" class="btn btn-primary btn-sm"><span class="fa fa-reply"></span> Angebot abgeben</a>
                                        </span>
                                    </div>
                                    
                                    
                                </div>
                            </div>
                        </div>
                    </article>


                }
                </section>
                </div>
        </div></div>


