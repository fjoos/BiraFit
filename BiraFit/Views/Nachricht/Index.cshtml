@model BiraFit.ViewModel.NachrichtViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Meine Chats</h2>

@{
    int counter = 0;
    foreach (var item in @Model.Konversationen)
    {
        <p>Konversation:</p> <a href="Nachricht/Chat/@item.Id">@Model.LastMessages[counter]</a>
        counter++;
    }    
}






