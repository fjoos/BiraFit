@model BiraFit.ViewModel.NachrichtViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <section id="loginForm">
        <div class="container">
            <div class="mainbox col-md-8 col-md-offset-2">
                    <div class="panel-heading" id="loginHead">
                        <div class="panel-title"><h2>Meine Chats</h2></div>
                    </div>
                    <div class="modal-body">
                        <ul class="chat">
                            @{
                                int counter = 0;
                                foreach (var item in @Model.Konversationen)
                                {
                                    <li class="left clearfix" id="chatList">
                                        <a href="Nachricht/Chat/@item.Id">
                                            <div class="col-md-12">
                                                <span class="chat-img pull-left">
                                                    <img src="http://www.keita-gaming.com/assets/profile/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg" alt="@Model.ProfileImages[counter]" class="img-circle" />
                                                </span>
                                                <div class="chat-body clearfix">
                                                    <div class="header">
                                                        <strong>Chatpartner</strong>
                                                        <small class="pull-right text-muted">
                                                            <span class="glyphicon glyphicon-time"></span>
                                                        </small>
                                                    </div>
                                                    @if (@Model.LastMessages[counter].Length > 40)
                                                    {
                                                        <p>
                                                            @Model.LastMessages[counter].Remove(40)...
                                                        </p>

                                                    }
                                                    else
                                                    {
                                                        <p>
                                                            @Model.LastMessages[counter]
                                                        </p>
                                                    }
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    counter++;
                                }
                            }
                        </ul>
                    </div>
            </div>
            </div>
    </section>
</div>





