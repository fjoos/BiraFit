@model BiraFit.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Kennwort zurücksetzen";
}

<body id="loginRegBack">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)

        <div class="container">
            <div id="mybox" class="mainbox col-md-6 col-md-offset-3  modal-content">
                <div class="panel panel-info" id="innerbox">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <h4>Kennwort zurücksetzen</h4>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="form-group">
                                    <label for="mail">E-mail</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "mail", @placeholder = "E-Mail" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="npw">Neues Kennwort</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "npw" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="confpw">Neues Kennwort bestätigen</label>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "confpw" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <input type="submit" class="btn btn-primary" id="normalButton" value="Kennwort ändern" />
                    </div>
                </div>
            </div>
        </div>
    }
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

