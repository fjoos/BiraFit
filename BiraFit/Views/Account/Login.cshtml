@using BiraFit.Models
@model LoginViewModel
@{
    ViewBag.Title = "Anmelden";
}

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="container">
                    <div id="mybox" class="mainbox col-md-4 col-md-offset-4">
                        <div class="panel panel-info" id="innerbox">
                            <div class="panel-heading" id="loginHead">
                                <div class="panel-title">Einloggen</div>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="usrname"><span class="glyphicon glyphicon-user"></span> E-Mail</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "usrname", @placeholder = "E-Mail" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Kennwort</label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "psw", @placeholder = "Kennwort" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group checkbox">
                                        <label>
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" id="loginButton" class="btn btn-block"><span class="glyphicon glyphicon-off"></span> Anmelden</button>
                                    </div>
                                    <div class="form-group">
                                        @Html.ActionLink("Noch kein Account vorhanden?", "../Account/Register")
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>



