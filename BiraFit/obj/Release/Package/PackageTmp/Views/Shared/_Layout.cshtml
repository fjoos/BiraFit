<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="/Content/bootstrap.css" rel="stylesheet">
    <link href="/Content/site.css" rel="stylesheet">
    <link href="/Content/star-rating.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>  
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/star-rating")
    <link rel="shortcut icon" href="~/favicon2.ico" />
    <link rel="icon" href="~/favicon2.ico" type="image/ico" />
</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="menuBar">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" id="myBurgerButton" class="navbar-toggle" data-toggle="collapse" data-target="#navbarDidCollapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar" id="burgerLine"></span>
                    <span class="icon-bar" id="burgerLine"></span>
                    <span class="icon-bar" id="burgerLine"></span>
                </button>
                <h1 class="modal-title"><a id="titleLink" href="/">BiraFit</a></h1>
            </div>
            <div class="collapse navbar-collapse" id="navbarDidCollapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>





        <div class="container body-content">
            @RenderBody()
            <footer id="footer">
                <p>&copy; @DateTime.Now.Year - BiraFit</p>
                <p>Kontakt: <a href="birafit17@gmail.com" id="link">birafit17@gmail.com</a></p>
            </footer>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>